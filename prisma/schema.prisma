generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Application Model
model Application {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  status    String   @default("pending")
  payload   Json
  createdAt DateTime @default(now())
}
